# Pleasanter ローカルテスト環境変数設定

# PostgreSQL データベース設定
POSTGRES_USER=pleasanter
POSTGRES_PASSWORD=local_password_123
POSTGRES_DB=pleasanter

# Pleasanter データベース接続文字列
Implem_Pleasanter_Rds_PostgreSQL_SaConnectionString=Host=db;Port=5432;Database=pleasanter;Username=pleasanter;Password=local_password_123
Implem_Pleasanter_Rds_PostgreSQL_OwnerConnectionString=Host=db;Port=5432;Database=pleasanter;Username=pleasanter;Password=local_password_123
Implem_Pleasanter_Rds_PostgreSQL_UserConnectionString=Host=db;Port=5432;Database=pleasanter;Username=pleasanter;Password=local_password_123

# アプリケーション設定
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:80

# セキュリティ設定
Pleasanter_Authentication_Provider=Forms
Pleasanter_Authentication_Forms_RequireHttps=false

# ログ設定
Pleasanter_Log_Level=Information 