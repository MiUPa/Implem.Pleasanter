# Pleasanter SSL対応環境変数設定

# サーバー情報
SERVER_IP=162.43.9.32
DOMAIN_NAME=miura-training.xvps.jp
SSL_EMAIL=your-email@example.com

# PostgreSQL データベース設定
POSTGRES_USER=pleasanter
POSTGRES_PASSWORD=pleasanter_secure_password
POSTGRES_DB=pleasanter

# Pleasanter データベース接続文字列
Implem_Pleasanter_Rds_PostgreSQL_SaConnectionString=Host=db;Port=5432;Database=pleasanter;Username=pleasanter;Password=pleasanter_secure_password
Implem_Pleasanter_Rds_PostgreSQL_OwnerConnectionString=Host=db;Port=5432;Database=pleasanter;Username=pleasanter;Password=pleasanter_secure_password
Implem_Pleasanter_Rds_PostgreSQL_UserConnectionString=Host=db;Port=5432;Database=pleasanter;Username=pleasanter;Password=pleasanter_secure_password

# アプリケーション設定
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:80

# セキュリティ設定
Pleasanter_Authentication_Provider=Forms
Pleasanter_Authentication_Forms_RequireHttps=true

# ログ設定
Pleasanter_Log_Level=Information