# Pleasanter 自動デプロイメント環境変数設定

# PostgreSQL データベース設定
POSTGRES_USER=pleasanter
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=pleasanter

# Pleasanter データベース接続文字列
Implem_Pleasanter_Rds_PostgreSQL_SaConnectionString=Host=db;Port=5432;Database=pleasanter;Username=pleasanter;Password=your_secure_password_here
Implem_Pleasanter_Rds_PostgreSQL_OwnerConnectionString=Host=db;Port=5432;Database=pleasanter;Username=pleasanter;Password=your_secure_password_here
Implem_Pleasanter_Rds_PostgreSQL_UserConnectionString=Host=db;Port=5432;Database=pleasanter;Username=pleasanter;Password=your_secure_password_here

# アプリケーション設定
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:80

# セキュリティ設定
Pleasanter_Authentication_Provider=Forms
Pleasanter_Authentication_Forms_RequireHttps=false

# ログ設定
Pleasanter_Log_Level=Information 